<% title 'Create a new learning community' %>
<%= render ContainerComponent.new(classes: "py-10") do %>
  <%= render TitleComponent.new(tag: "h1", size: "lg", classes: "text-center pb-10") do %>
    Create a new learning community
  <% end %>

  <%= yala_form_with model: @community, url: communities_path, scope: :community, class: "form flex flex-col max-w-xl mx-auto" do |f| %>
    <%= f.labelled_text_field :name, class: "input", placeholder: "Oasis Learning", label: 'Name' %>
    <%= f.labelled_text_field :subdomain, class: "input", placeholder: "oasis", label: 'Subdomain' %>
    <%= f.labelled_text_field :username, class: "input", placeholder: "keziah82", label: 'Username' %>
    <%= f.labelled_email_field :email, class: "input", placeholder: "keziah@oasis-learning.com", label: 'Email' %>
    <%= f.labelled_password_field :password, class: "input", placeholder: "*********", label: 'Password' %>
    <%= f.submit 'Create', class: "btn-success my-4" %>
  <% end %>
<% end %>
