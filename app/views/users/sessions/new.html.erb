<% title 'Login' %>

<%= render ContainerComponent.new(classes: "py-10") do %>
  <%= render TitleComponent.new(tag: "h1", size: "lg", classes: "text-center pb-10") do %>
    Login
  <% end %>
  <%= yala_form_with model: resource, url: community_login_path(community_slug: ActsAsTenant.current_tenant.slug), class: "form flex flex-col max-w-xl mx-auto" do |f| %>
    <%= f.labelled_email_field :email, class: "input", placeholder: "keziah@oasis-learning.com", label: 'Email' %>
    <%= f.labelled_password_field :password, class: "input", placeholder: "*********", label: 'Password' %>


    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <%= f.submit 'Login', class: "btn-success my-4" %>
  <% end %>
<% end %>

<%= render "users/shared/links" %>
