
<% title 'Sign Up' %>


<%= render ContainerComponent.new(classes: "py-10") do %>
  <%= render TitleComponent.new(tag: "h1", size: "lg", classes: "text-center pb-10") do %>
    Sign Up
  <% end %>
  <%= yala_form_with model: resource, url: community_sign_up_path(community_slug: ActsAsTenant.current_tenant.slug), class: "form flex flex-col max-w-xl mx-auto" do |f| %>
    <%= f.labelled_text_field :username, class: "input", placeholder: "keziah82", label: 'Username' %>
    <%= f.labelled_email_field :email, class: "input", placeholder: "keziah@oasis-learning.com", label: 'Email' %>
    <%= f.labelled_password_field :password, class: "input", placeholder: "*********", label: 'Password' %>
    <%= f.labelled_password_field :password_confirmation, class: "input", placeholder: "*********", label: 'Password Confirmation' %>
    <%= f.submit 'Sign Up', class: "btn-success my-4" %>
  <% end %>
<% end %>

<%= render "users/shared/links" %>
