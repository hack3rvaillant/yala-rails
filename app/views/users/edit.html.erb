<%= title "Profile" %>

<%= render ContainerComponent.new do %>
  <%= render TitleComponent.new(tag: "h1") do %>
    Profile
  <% end %>

  <%= yala_form_with model: @user, url: community_profile_path(@user.community), class: "form flex flex-col max-w-xl mx-auto" do |f| %>
    <%= f.labelled_text_field :username, class: "input", placeholder: "keziah82", label: 'Username' %>
    <%= f.labelled_email_field :email, class: "input", placeholder: "keziah@oasis-learning.com", label: 'Email' %>
    <%= f.labelled_password_field :password, class: "input", placeholder: "*********", label: 'Password' %>
    <%= f.submit 'Update', class: "btn-success my-4" %>
  <% end %>
<% end %>
